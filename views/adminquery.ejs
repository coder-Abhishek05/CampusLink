<!-- views/admin/queries.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - View Queries</title>
  <link rel="stylesheet" href="/css/query.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <ul class="nav">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="/admin">Dashboard</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/users">Manage User</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/user/logout">Logout</a>
    </li>
  </ul>
  <div class="container">
    <h2>Unresolved Queries</h2>
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Query</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% queries.forEach(query => { %>
          <tr>
            <td><%= query.userName %></td>
            <td><%= query.email %></td>
            <td><%= query.queryText %></td>
            <td>
              <!-- Resolve button -->
              <form action="/query/resolve-query/<%= query._id %>" method="POST">
                <button type="submit" class="btn resolve-btn">Resolve</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
