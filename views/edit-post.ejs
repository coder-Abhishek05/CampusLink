<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title %></title>
    <meta name="description" content="<%- locals.description %>">
    <link rel='stylesheet' href="/css/styles.css">
    <script type="text/javascript" defer src="/javascripts/script.js"></script>
</head>
<body>
    
    <div class="container">
   <%- include('partials/header.ejs') %>
   
    
    <main class="main"><a href="/main/home">&larr; Back</a>
        <div class="admin-title">
          <h2>Edit Post</h2>
        
          <form action="/main/delete-post/<%= data._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn-delete btn">
          </form>
        
        </div>
        
        <form action="/main/edit-post/<%= data._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        
          <div class="mb-3">
            <label for="coverImage" class="form-label">Cover Image </label>
            <!-- Input field to show and edit the file name only (without the number) -->
            <input type="text" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage" 
                   value="<%= data.coverImageURL.split('/').pop().split('-').slice(1).join('-') %>">
        </div>
          <label for="title"><b>Title</b></label>
          <input type="text" placeholder="Post Title" name="title" value="<%= data.title %>">
        
          <label for="body"><b>Content</b></label>
          <textarea name="body" cols="50" rows="10"><%= data.body %></textarea>
        
          <input type="submit" value="Update" class="btn">
        
        </form>
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script></main>
  
   <%- include('partials/footer.ejs') %>
</div>
   
</body>
</html>
